<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".base.view.FormProductActivity">

        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:hint="Nome do Produto"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/descET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/nameET"
            app:layout_constraintStart_toStartOf="@id/nameET"
            app:layout_constraintTop_toBottomOf="@id/nameET"
            android:textSize="18sp"
            android:hint="Descrição"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/priceEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/descET"
            app:layout_constraintStart_toStartOf="@+id/descET"
            app:layout_constraintTop_toBottomOf="@id/descET"
            android:textSize="18sp"
            android:hint="Preço"
            android:inputType="numberDecimal"
            />

        <Button
            android:id="@+id/saveBTN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priceEt"
            android:textSize="18sp"
            android:layout_margin="16dp"
            app:layout_constraintVertical_bias="1"
            android:text="Salvar Produto"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>